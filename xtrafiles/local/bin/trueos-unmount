#!/bin/sh
# Script to unlink autofs media in /autofs from /media
#arguments: <device node>

# Only run as superuser
if [ "$(id -u)" != "0" ]; then
   echo "This script must be run as root" 1>&2
   exit 1
fi

show_usage()
{
  echo "usage: trueos-mount label=name"
}

# Check for arguments
  if [ -z $1 ] ; then
    show_usage
    exit 1
  fi
dev=${1}

if [ ! -f /tmp/.${dev} ]; then
  return 1;
fi
label=`cat /tmp/.${dev}`
rm /media/"${label}"
